@model IEnumerable<InventoryManagementApplication.Models.Item>

@{
    ViewData["Title"] = "Inventory Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Inventory Items</h2>
    <a asp-action="CreateItems" class="btn btn-success mb-3">Add New Item</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.CreatedAt.ToString("dd-MM-yyyy")</td>
                    <td>
                        <a asp-controller="Items" asp-action="updateItems" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-controller="Items" asp-action="DeleteconfirmationItems" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
